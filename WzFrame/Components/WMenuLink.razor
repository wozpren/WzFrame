<NavLink class="nav-link " href="@Url" Match="NavLinkMatch.All">
    <div class="flex-fill">
        <i class="@Icon"></i>
        <span class="text">@Text</span>
    </div>
    <i class="fas fa-angle-right" />
</NavLink>


@code {
    [Parameter]
    public string? Url { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public string? Text { get; set; }
}
