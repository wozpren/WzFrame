@inherits LayoutComponentBase

<style>
    #blazor-error-ui {
        background: lightyellow;
        bottom: 0;
        box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
        display: none;
        left: 0;
        padding: 0.6rem 1.25rem 0.7rem 1.25rem;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

        #blazor-error-ui .dismiss {
            cursor: pointer;
            position: absolute;
            right: 0.75rem;
            top: 0.5rem;
        }
</style>

<BootstrapBlazorRoot>
    @if (ErrorMessage is not null)
    {
        <div class="position-fixed" style="top: 10px;left:50%;transform: translateX(-50%);">
            <Alert Color="Color.Danger">@ErrorMessage</Alert>
        </div>
    }
    @if (GoodMessage is not null)
    {
        <div class="position-fixed" style="top: 10px;left:50%;transform: translateX(-50%);">
            <Alert Color="Color.Success">@GoodMessage</Alert>
        </div>
    }
    <CascadingValue Value="ErrorMessage">
        <CascadingValue Value="GoodMessage">
            @Body
        </CascadingValue>
    </CascadingValue>
</BootstrapBlazorRoot>



<div id="blazor-error-ui">
    出现了未处理的错误
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    public string? ErrorMessage { get; set; }
    public string? GoodMessage { get; set; }
}